{
  "name": "bookmyshow-scraper",
  "version": "1.0.0",
  "description": "BookMyShow movie scraper with Telegram notifications",
  "main": "smart-scraper.js",
  "scripts": {
    "start": "node smart-scraper.js",
    "dev": "node smart-scraper.js --all --once",
    "all": "node smart-scraper.js --all",
    "all-once": "node smart-scraper.js --all --once",
    "kingdom": "node smart-scraper.js --kingdom",
    "monitor": "node smart-scraper.js",
    "once": "node smart-scraper.js --once",
    "fantastic-four": "node smart-scraper.js \"https://in.bookmyshow.com/movies/hyderabad/the-fantastic-four-first-steps/buytickets/ET00432123/20250727\" --once",
    "service:start": "node smart-scraper.js --all",
    "service:install": "pm2 start smart-scraper.js --name bookmyshow-monitor -- --all",
    "service:stop": "pm2 stop bookmyshow-monitor",
    "service:restart": "pm2 restart bookmyshow-monitor",
    "service:logs": "pm2 logs bookmyshow-monitor",
    "service:status": "pm2 list"
  },
  "keywords": [
    "bookmyshow",
    "scraper",
    "puppeteer",
    "telegram"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^21.11.0",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
